{
  "name": "vemsy",
  "version": "0.0.1",
  "description": "",
  "main": "./dist/index.js",
  "types": "./typings/index.d.ts",
  "bin": {
    "vemsy": "./bin/index.js"
  },
  "scripts": {
    "build:project": "tsc -p tsconfig.json",
    "build:cli": "tsc cli/index.ts --outDir bin && cp cli/.setup-folder bin/ -r",
    "build:all": "npm run build:project && npm run build:cli",
    "clean": "rm -fr doc/* dist/* bin/*",
    "pm2:start": "pm2 start pm2.json",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "nyc mocha --recursive --require ts-node/register ./tests/**/*.spec.ts ./tests/**/**/*.spec.ts ./tests/**.spec.ts",
    "coverage": "NODE_ENV=test nyc report --reporter=text-lcov | coveralls",
    "benchmark": "ts-node benchmark/index.ts",
    "doc": "typedoc core/ --out doc/",
    "global:test": "npm run build:all && sudo npm link"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jadok/vemsy.git"
  },
  "author": "Quentin <jadok> Jadeau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jadok/vemsy/issues"
  },
  "homepage": "https://github.com/jadok/vemsy#readme",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.5.5",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "pm2": "^3.0.3",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@types/morgan": "^1.7.35",
    "@types/winston": "^2.4.4",
    "benchmark": "2.1.4",
    "express": "4.16.3",
    "fs": "0.0.1-security",
    "generate-folders": "^0.1.0",
    "include-all": "4.0.3",
    "markdown": "0.5.0",
    "morgan": "^1.9.1",
    "path": "0.12.7",
    "path-to-regexp": "2.2.1",
    "sass": "^1.13.1",
    "ts-node": "^7.0.1",
    "twig": "1.12.0",
    "winston": "^3.1.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "extension": [
      ".ts"
    ],
    "lines": 0,
    "statements": 0,
    "functions": 0,
    "exclude": [
      "alternative",
      "alternative-tmp",
      "benchmark",
      "bin",
      "cli",
      "dist",
      "doc",
      "node_modules",
      "webpack",
      "tests"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true,
    "temp-directory": "./alternative-tmp",
    "report-dir": "./alternative"
  },
  "files": [
    "./dist/"
  ]
}
