{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist/",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [
    "core/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".old",
    "app",
    "tests",
    "public"
  ]
}