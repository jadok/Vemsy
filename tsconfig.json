{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist/",
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [
    "./core/**/*",
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".old",
    "app",
    "tests",
    "public"
  ]
}