{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "dist",
    "rootDir": "core",
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [
    "core"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".old",
    "app",
    "tests",
    "public"
  ]
}
